{
  "name": "todo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "docker compose build && docker compose watch",
    "stop": "docker compose stop",
    "teardown": "docker compose down",
    "test": "npm run test:jest && npm run test:cy",
    "lint": "eslint .",
    "danger": "danger ci",
    "local:build": "next build",
    "local:dev": "next dev",
    "test:jest": "jest",
    "test:cy": "CYPRESS_EXIT=0; npm run start:test -- --detach && cypress run || CYPRESS_EXIT=$?; npm run stop:test && exit $CYPRESS_EXIT",
    "start:test": "cross-env DB_HOST=mariadb DB_USER=root DB_PASSWORD=password DB_DATABASE=tasktix_test docker compose -f compose.yaml up --build",
    "stop:test": "cross-env docker compose -f compose.yaml down --volumes",
    "testdb:reset": "docker compose exec -T mariadb mariadb -uroot -ppassword tasktix_test < ./scripts/database/create.sql",
    "testdb:seed": "docker compose exec -T mariadb mariadb -uroot -ppassword tasktix_test < ./scripts/database/seedTests.sql",
    "cy:open": "cypress open"
  },
  "dependencies": {
    "@nextui-org/react": "^2.6.11",
    "framer-motion": "^11.18.2",
    "mysql2": "^3.14.1",
    "next": "^14.2.30",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "cypress": "^15.1.0",
    "danger": "^13.0.4",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.30",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
